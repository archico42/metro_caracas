USE metro_caracas;

--CREANDO LA TABLA USUARIOS PARA LOS QUE UTILIZAN EL SERVICIO DEL TREN
CREATE TABLE `users` (

--IDENTIFICADORES PRIMARIOS
    `id` BIGINT (9) UNSIGNED NOT NULL,
    `station_id` BIGINT (20) UNSIGNED NOT NULL,
    `locations_id` BIGINT(20) UNSIGNED NOT NULL,
    
--IDENTIFICADOR DE ACTIVIDAD
`viaje_terminado` BOOLEAN DEFAULT FALSE,

    updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    create_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,


--LLAVE PRIMARIA
    PRIMARY KEY (id),

--LLAVE SECUNDARIA
    CONSTRAINT `users_station_id_foreign`
    FOREIGN KEY (`station_id`) REFERENCES `stations` (`id`)

    CONSTRAINT `users_location_id`
    FOREIGN KEY (`locations_id`) REFERENCES `locations` (`id`)
)

--PROTOCOLO DE CARACTERES ACEPTADOS PARA INSERTAR Y RECIBIR DATOS
DEFAULT CHARSET=utf8mb4
COLLATE=utf8mb4_unicode_ci;